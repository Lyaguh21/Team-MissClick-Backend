generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  login String @unique  
  name String
  password String
  roles Role[]
  createdAt DateTime @default (now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Task{
  id Int @id
  name String
  description String
  
}

enum Role{
  ADMIN
  USER
}